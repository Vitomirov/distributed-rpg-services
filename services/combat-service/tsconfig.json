{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"],
      "express": ["node_modules/express"],
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" 
    ]
  },
  "include": [
    "src/**/*",
    "../../shared/**/*"
  ]
}