{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"],
      "express": ["node_modules/express"],
      "*": ["node_modules/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "../../shared/**/*"
  ]
}